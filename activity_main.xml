<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Text To Speech"
        android:textColor="#292931"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Input Text Field -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="395dp"
        android:layout_height="58dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"

        android:hint="Enter text here"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- Spinner for Language Selection -->
    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="139dp"
        android:layout_height="54dp"
        android:layout_below="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:entries="@array/languages_array"
        android:padding="10dp"
        android:spinnerMode="dropdown" />

    <!-- Convert Button -->
    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/languageSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="#1D87DB"
        android:text="CONVERT"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Image View (Optional Decoration) -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_1"
        android:contentDescription="Image" />

</RelativeLayout>
